<div class="contents row">
  <div class="container">
    <%= form_with url: tweets_path, method: :post, local:true do |f| %>
      <h3>
        投稿する
      </h3>
      <%= f.text_area :content, cols: '30', name: 'text', placeholder: 'いまどうしてる？', rows: '10' %>
      <%= f.label :image, class: "upload-label", for: "upload-icon" do %>
        <i class="far fa-image image_icon"></i><br>
        <%= f.file_field :image, accept: 'image/jpg,image/jpeg,image/png,image/gif', id: "upload-icon" %>
        <img id="img_prev" src="#" class='img_hidden' width="150px" height="auto">
      <% end %>
      <%= f.submit value: '送信' %>
    <% end %>
  </div>
</div>
